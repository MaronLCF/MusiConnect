<button class="btn btn-primary btn-sm" type="button" style="margin-left: 200px;margin-bottom: 15px;" data-toggle="modal"
    data-target="#modal-about">Edit About</button>
<div role="dialog" tabindex="-1" class="modal fade text-center" id="modal-about">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-left" style="margin-left: 0px; padding-right: 16px; padding-left: 150px">
                <h3 class="modal-title text-center" style="width: auto; margin-left: 0px">Edit About</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/edit-about" method="post" class="aboutform">

                    <p class="text-left birthdateform" style="margin-top: 0px">Birthdate<input class="form-control"
                            type="date" value="<%= user.birthday%>" /></p>
                    <p class="text-left" style="margin-top: 0px">Location<input type="text"
                            class="form-control genderform" value="<%= user.city%>"/></p>
                    <p class="text-left" style="margin-top: 0px" value="<%= user.gender%>>Gender</p>
                    <p class="text-left genderform">
                        Male <input type="radio"
                            style="margin-right: 25px; margin-left: 5px" /><span>Female</span><input type="radio"
                            style="margin-left: 10px" />
                    </p>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-light" type="button" data-dismiss="modal">Close</button><button
                    class="btn btn-primary" type="submit" value="edit-about">Save</button>
            </div>
        </div>
    </div>
</div>